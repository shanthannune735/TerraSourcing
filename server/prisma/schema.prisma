datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Importer {
  id                    Int                            @id @default(autoincrement())
  companyInformation    ImporterCompanyInformation?
  basicInformation      ImporterBasicInformation?
  productDetails        ImporterProductDetails?
  licenseDetails        ImporterLicenseDetails?
  additionalInformation ImporterAdditionalInformation?
}

model ImporterCompanyInformation {
  id                  Int       @id @default(autoincrement())
  companyName         String
  email               String
  dateOfIncorporation DateTime?
  website             String
  phone               String
  country             String
  importer            Importer  @relation(fields: [importerId], references: [id])
  importerId          Int       @unique
}

model ImporterBasicInformation {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  address    String
  password   String
  timeZone   String
  language   String
  importer   Importer @relation(fields: [importerId], references: [id])
  importerId Int      @unique
}

model ImporterProductDetails {
  id             Int      @id @default(autoincrement())
  productNames   String
  tradeVolume    String
  tradeValue     String
  tradeCountries String
  importer       Importer @relation(fields: [importerId], references: [id])
  importerId     Int      @unique
}

model ImporterLicenseDetails {
  id            Int      @id @default(autoincrement())
  taxNumber     String
  licenseNumber String
  iecCode       String
  ecgc          String
  blNumber      String
  importer      Importer @relation(fields: [importerId], references: [id])
  importerId    Int      @unique
}

model ImporterAdditionalInformation {
  id                       Int                       @id @default(autoincrement())
  annualTurnover           String
  directors                String
  b2bListing               String
  tradeCompany             String
  tradeWebsite             String
  tradeEmail               String
  tradePhone               String
  importer                 Importer                  @relation(fields: [importerId], references: [id])
  importerId               Int                       @unique
  ImporterSocialMediaLinks ImporterSocialMediaLinks?
}

model ImporterSocialMediaLinks {
  id               Int                           @id @default(autoincrement())
  linkedin         String?
  facebook         String?
  twitter          String?
  instagram        String?
  additionalInfo   ImporterAdditionalInformation @relation(fields: [additionalInfoId], references: [id])
  additionalInfoId Int                           @unique
}

model Exporter {
  id                Int                        @id @default(autoincrement())
  basicInformation  ExporterBasicInformation?
  companyDetails    ExporterCompanyDetails?
  additionalDetails ExporterAdditionalDetails?
  licenseDetails    ExporterLicenseDetails?
  productDetails    ExporterProductDetails?
}

model ExporterBasicInformation {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  country     String
  phoneNumber String
  exporter    Exporter @relation(fields: [exporterId], references: [id])
  exporterId  Int      @unique
}

model ExporterCompanyDetails {
  id                  Int       @id @default(autoincrement())
  company             String
  address             String
  website             String
  dateOfIncorporation DateTime?
  exporter            Exporter  @relation(fields: [exporterId], references: [id])
  exporterId          Int       @unique
}

model ExporterLicenseDetails {
  id         Int      @id @default(autoincrement())
  iecCode    String
  erNumber   String
  ftLicense  String
  vatOrGst   String
  exporter   Exporter @relation(fields: [exporterId], references: [id])
  exporterId Int      @unique
}

model ExporterProductDetails {
  id           Int      @id @default(autoincrement())
  productNames String
  tradeValue   String
  tradeVolume  String
  exporter     Exporter @relation(fields: [exporterId], references: [id])
  exporterId   Int      @unique
}

model ExporterAdditionalDetails {
  id                       Int                       @id @default(autoincrement())
  reportProduct            String
  reportCountry            String
  exporter                 Exporter                  @relation(fields: [exporterId], references: [id])
  exporterId               Int                       @unique
  ExporterSocialMediaLinks ExporterSocialMediaLinks?
}

model ExporterSocialMediaLinks {
  id               Int                       @id @default(autoincrement())
  linkedin         String?
  facebook         String?
  twitter          String?
  instagram        String?
  additionalInfo   ExporterAdditionalDetails @relation(fields: [additionalInfoId], references: [id])
  additionalInfoId Int                       @unique
}
